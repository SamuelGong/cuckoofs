namespace cuckoo.meta_fbs;

table PlainCommandParam {
    command: string;
}
table PathOnlyParam {
    path: string;
}
table MkdirSubMkdirParam {
    parent_id: uint64;
    name: string;
    inode_id: uint64;
}
table MkdirSubCreateParam {
    parent_id_part_id: uint64;
    name: string;
    inode_id: uint64;
    st_mode: uint32;
    st_mtim: uint64;
    st_size: int64;
}
table CloseParam {
    path: string;
    st_size: int64;
    st_mtim: uint64;
    node_id: int32;
}
table ReadDirParam {
    path: string;
    max_read_count: int32 = -1;
    last_shard_index: int32 = -1;
    last_file_name: string;
}
table RmdirSubRmdirParam {
    parent_id: uint64;
    name: string;
}
table RmdirSubUnlinkParam {
    parent_id_part_id: uint64;
    name: string;
}
table RenameParam {
    src: string;
    dst: string;
}
table RenameSubRenameLocallyParam {
    src_parent_id: uint64;
    src_parent_id_part_id: uint64 = 0;
    src_name: string;
    dst_parent_id: uint64;
    dst_parent_id_part_id: uint64 = 0;
    dst_name: string;

    target_is_directory: bool;
    directory_inode_id: uint64;
    src_lock_order: int32;
}
table RenameSubCreateParam {
    parentid_partid: uint64;
    name: string;
    st_ino: uint64;
    st_dev: uint64;
    st_mode: uint32;
    st_nlink: uint64;
    st_uid: uint32;
    st_gid: uint32;
    st_rdev: uint64;
    st_size: int64;
    st_blksize: int64;
    st_blocks: int64;
    st_atim: uint64;
    st_mtim: uint64;
    st_ctim: uint64;
    node_id: int32;
}
table UtimeNsParam {
    path: string;
    st_atim: uint64;
    st_mtim: uint64;
}
table ChownParam {
    path: string;
    st_uid: uint32;
    st_gid: uint32;
}
table ChmodParam {
    path: string;
    st_mode: uint64;
}
union AnyMetaParam {
    PlainCommandParam,
    PathOnlyParam,
    MkdirSubMkdirParam,
    MkdirSubCreateParam,
    CloseParam,
    ReadDirParam,
    RmdirSubRmdirParam,
    RmdirSubUnlinkParam,
    RenameParam,
    RenameSubRenameLocallyParam,
    RenameSubCreateParam,
    UtimeNsParam,
    ChownParam,
    ChmodParam
}
table MetaParam {
    param: AnyMetaParam;
}

root_type MetaParam;